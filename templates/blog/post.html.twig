{% extends 'base.html.twig' %}

{% block title %}{{post.postTitle}}{% endblock %}

{% block blog %}active{% endblock %}

{% block body %}

    <div class="post__category-img-container">
        <img class="post__category-img" src="img/alim.jpg" alt="fruits">
    </div>

    <article class="content">

        <div class="content__title-container post__head">
            <span class="category"><a href="{{ path('blog') }}">Blog</a> \ <a href="category.html">{{post.postCategory.catName}} \</a></span>
            <h1 class="content__title post__title">{{post.postTitle}}</h1>
        </div>

        <section>
            <div class="preview__container">
                <div class="preview__img">
                    <img class="img__content post__img" src="{{post.postImg}}" alt="plat sain">
                </div>
                <p>{{post.postContent}}</p>
        </div>

        <span><a href="{{ path(app.request.get('referer')) }}">Retour</a></span>

    </article>

{% endblock %}
